<title>Login - Recipe Book</title>

<div
  class="col-12 col-sm-8 offset-sm-2 col-md-6 offset-md-3 col-lg-4 offset-lg-4"
>
  <div id="login-main">
    <div id="login-buttons" class="">
      <button class="btn btn-light" id="google-login-button">
        <img src="/icons/googleIcon.svg" class="icon" />
        <h4>Login with Google</h4>
      </button>
    </div>

    <div id="login-username" class="d-none">
      <div class="form-group row justify-content-center">
        <h4>Enter a username</h4>
      </div>
      <div class="form-group row">
        <label for="login-username-input" class="col-sm-3 col-form-label"
          >Username</label
        >
        <div class="col-sm-9">
          <input
            type="text"
            class="form-control"
            id="login-username-input"
          />
        </div>
      </div>
      <div class="form-group row">
        <p id="username-extras"></p>
      </div>
      <div class="form-group row justify-content-center">
        <button type="submit" class="btn btn-primary" id="username-submit">Submit</button>
      </div>
    </div>

    <div id="login-spinner" class="spinner-border mt-4 d-none" role="status">
      <span class="sr-only">Loading...</span>
    </div>
  </div>
</div>

<script>
  const signingUp = '<%- session.signingUp !== null %>'
</script>
<script src="https://apis.google.com/js/platform.js" defer></script>
<script src="/js/login.js" defer></script>
